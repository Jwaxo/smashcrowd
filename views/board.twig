
<div class="grid-x grid-margin-x">
  <div class="cell medium-6 large-4">
    <h1>SmashCrowd</h1>
    <p>Draft your next online Smashdown!</p>
  </div>

  <div class="cell medium-6 large-8">

    <div id="board_info_container" class="board-info">
      {% include "board-data.twig" %}
    </div>
  </div>
</div>

<ul class="tabs" data-tabs id="selection-tabs">
  <li class="tabs-title is-active"><a href="#characters" aria-selected="true">Characters</a></li>
  <li class="tabs-title"><a data-tabs-target="stages" href="#stages">Stages</a></li>
</ul>

<div class="tabs-content" data-tabs-content="selection-tabs">

  <div id="characters" class="grid-x grid-margin-x tabs-panel is-active">
    {% include 'characters-container.twig' %}
  </div>

  <div id="stages" class="grid-x grid-margin-x tabs-panel">
    {% include 'stages-container.twig' %}
  </div>

</div>

<div id="players">
  {% include 'players-container.twig' %}
</div>

<div id="chat_container">
  {% include 'chat-container.twig' %}
</div>

<div id="status_container" class="status-box">
</div>