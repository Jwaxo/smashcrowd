{#
  Individual character portraits. These are rendered both in a roster or in the
  main character container.
#}
{% set characterClasses = [
  'character',
  (isDisabled ? 'character--disabled' : ''),
  (isActive and character.getCharId() != 999 ? 'character--active' : ''),
  (character.getState() ? 'character--' ~ character.getState() : ''),
]|join(' ')|trim %}

{% set characterStyles = [
  (character.getImage() ? 'background-image: url(' ~ character.getImage() ~ ')' : ''),
  (character.getImage() ? 'background-color: #FFFFFF' : ''),
]|join('; ')|trim %}

<div class="{{ characterClasses }}" data-character-round="{{ characterRound ? characterRound : 0 }}" data-character-id="{{ character.getCharId() }}" style="{{ characterStyles }}">
  <span class="character-name">{{ character.getName() }}</span>
</div>
