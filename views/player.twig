{#
  Player containers and rosters.
#}

{% set playerClasses = [
  'card',
  'player',
  (player.isActive ? 'player--active' : ''),
]|join(' ')|trim %}

{% set playerRosterClasses = [
  'player-roster',
  (not player.getCharacterCount() ? 'player-roster--empty' : ''),
]|join(' ')|trim %}

<div class="cell medium-4">
  <div class="{{ playerClasses }}" data-player-id="{{ player.getId() }}">
    <div class="card-section">
      <h4>{{ player.getName() }}</h4>
      {% if player.getClient() == 0 %}
        <div class="player-picker button" data-player-pick-id="{{ player.getId() }}">Be This Player</div>
      {% endif %}
      <div class="{{ playerRosterClasses }}">
        {% for character in player.getCharacters() %}
          {% include 'character.twig' %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>
