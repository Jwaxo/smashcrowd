{#
  Player containers and rosters.
#}

{% set playerClasses = [
  'card',
  'player',
  (player.getClient() == clientId ? 'player--current'),
  (player.isActive ? 'player--active'),
]|join(' ')|trim %}

{% set playerRosterClasses = [
  'player-roster',
]|join(' ')|trim %}
{#   (not player.getCharacters() ? 'player-roster--empty'), #}
{# The above doesn't work, for some reason. Ignoring and moving on for now. #}

<div class="cell">
  <div class="{{ playerClasses }}">
    <div class="card-section">
      <h4>{{ player.getName() }}</h4>
      <div class="{{ playerRosterClasses }}">
        {% for character in player.getCharacters() %}
          {% include 'character.twig' %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>
