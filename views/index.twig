<!DOCTYPE html>
<html lang="en" class="no-js" lang="en">
<head>
  <title>SmashCrowd</title>
  <link rel="stylesheet" href="css/app.css">
  <script src="/socket.io/socket.io.js"></script>
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700,800|Work+Sans:400,600,800" rel="stylesheet">
</head>
<body>

<div class="grid-container">
  <div class="grid-x grid-margin-x">
    <div class="cell medium-6 large-4">
      <h1>SmashCrowd</h1>
      <p>Draft your next online Smashdown!</p>
    </div>
    <div class="cell small-3">
      <div id="reset" data-open="modal_new_board" class="reset button">New Board</div>
    </div>
    <div id="board_info_container" class="cell auto">
      {% include "board-data.twig" %}
    </div>
  </div>

  <div id="players_container">
    {% include 'players-container.twig' %}
  </div>

  <div id="status_container" class="status-box">
  </div>

  <div id="characters_container" class="grid-x grid-margin-x">
    {% include 'characters-container.twig' %}
  </div>

  <div id="chat_container">
    {% include 'chat-container.twig' %}
  </div>
</div>

<div id="modal_new_board" class="modal reveal" data-reveal>

  {% include 'form-board-options.twig' %}

  <button class="close-button" data-close aria-label="Close modal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<script src="js/libs/jquery.js"></script>
<script src="js/libs/what-input.js"></script>
<script src="js/libs/foundation.js"></script>
<script src="js/app.js"></script>

</body>
</html>
