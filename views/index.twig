<!DOCTYPE html>
<html lang="en" class="no-js" lang="en">
<head>
  <title>SmashCrowd</title>
  <link rel="stylesheet" href="css/app.css">
  <script src="/socket.io/socket.io.js"></script>
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700,800|Work+Sans:400,600,800" rel="stylesheet">
</head>
<body>

<div class="grid-container">
  <div class="grid-x grid-margin-x">
    <div class="cell medium-6 large-4">
      <h1>SmashCrowd</h1>
      <p>Draft your next online Smashdown!</p>
    </div>

    <div class="cell medium-6 large-8">

      <div id="board_info_container" class="board-info">
        {% include "board-data.twig" %}
      </div>
    </div>
  </div>

  <div id="add_player_form_container">
    {% include 'form-add-player.twig' %}
  </div>

  <ul class="tabs" data-tabs id="selection-tabs">
    <li class="tabs-title is-active"><a href="#characters" aria-selected="true">Characters</a></li>
    <li class="tabs-title"><a data-tabs-target="stages" href="#stages">Stages</a></li>
  </ul>

  <div class="tabs-content" data-tabs-content="selection-tabs">

    <div id="characters" class="grid-x grid-margin-x tabs-panel is-active">
      {% include 'characters-container.twig' %}
    </div>

    <div id="stages" class="grid-x grid-margin-x tabs-panel">
      {% include 'stages-container.twig' %}
    </div>

  </div>

  <div id="players">
    {% include 'players-container.twig' %}
  </div>

  <div id="chat_container">
    {% include 'chat-container.twig' %}
  </div>

  <div id="status_container" class="status-box">
  </div>
</div>

<div id="modal_new_board" class="modal reveal" data-reveal>

  {% include 'form-board-options.twig' %}

  <button class="close-button" data-close aria-label="Close modal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<script src="js/libs/jquery.js"></script>
<script src="js/libs/what-input.js"></script>
<script src="js/libs/foundation.js"></script>
<script src="js/app.js"></script>

</body>
</html>
