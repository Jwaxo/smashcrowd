{#
  Displays information about the current board.
#}

<h4>Draft Type: {{ board.getDraftType(true) }}</h4>

{% if board.getStatus('new') %}
  <h4 class="warning">Waiting to Start {% if board.getTotalRounds() %}{{ board.getTotalRounds() }} Round {% endif %}Draft</h4>
{% elseif board.getStatus('draft') %}
  {% if board.getDraftType() == 'free' %}
    <h4>Please Draft {% if board.getTotalRounds() %}{{ board.getTotalRounds() }}{% else %}Your{% endif %} Characters</h4>
  {% else %}
    <h4>Draft Round: {{ board.getDraftRound() }}{% if board.getTotalRounds() %} out of {{ board.getTotalRounds() }}{% endif %}</h4>
  {% endif %}
{% elseif board.getStatus('draft-complete') %}
  <h4>Draft Complete!</h4>
{% elseif board.getStatus('game') %}
  <h4>Game Round: {{ board.getGameRound() }}{% if board.getTotalRounds() %} out of {{ board.getTotalRounds() }}{% endif %}</h4>
{% elseif board.getStatus('game-complete')%}
  <h4>Game Complete!</h4>
{% endif %}

<div class="board-options grid-x grid-margin-x">
  <div class="cell auto">
    <button id="reset" data-open="modal_new_board" class="reset button">New Board</button>
    {% if board.getStatus('new') %}
      <button id="randomize" class="randomize button" title="Randomizes the player order. This option will disappear after picking has begun.">Shuffle Players</button>
      <button id="start_picking" class="start-draft button" title="Begin the drafting process.">Start Draft</button>
    {% elseif not board.getTotalRounds() or board.getStatus('draft-complete') %}
      <button id="start_game" class="start-game button" title="Begin going through rounds.">Start Game</button>
    {% endif %}
  </div>
</div>
