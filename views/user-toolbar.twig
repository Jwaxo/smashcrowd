{% if user.getId() %}
  {{ user.getUsername() }}
  <button class="logout button small clear">Logout</button>
{% else %}
  <button class="login button small clear" data-open="modal_user_login">Login</button>
  <button class="register button small clear" data-open="modal_user_register">Register</button>
{% endif %}

<div id="modal_user_login" class="modal reveal" data-reveal>

  {% include 'form-user-login.twig' %}

  <button class="close-button" data-close aria-label="Close modal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<div id="modal_user_register" class="modal reveal" data-reveal>

  {% include 'form-user-register.twig' %}

  <button class="close-button" data-close aria-label="Close modal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
</div>