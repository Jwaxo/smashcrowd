{#
  The main character container and select screen. This is passed dynamically to
  clients when they connect or when a character is moved.
#}
{% set characterGridClasses = [
  'character-grid',
  (board.getStatus() != 'draft' ? 'character-grid--disabled' : ''),
  (board.getStatus() == 'game' ? 'character-grid--hidden' : ''),
]|join(' ')|trim %}

<div class="cell">
  <div class="{{ characterGridClasses }}">
    {% for character in board.getCharacters() %}
      {% if character.getPlayer() is null %}
        {% include 'character.twig' %}
      {% endif %}
    {% endfor %}
  </div>
</div>
